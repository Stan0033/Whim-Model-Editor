<Window x:Class="Whim_Model_Editor.Selector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whim_Model_Editor"
        Background="LightGray"
        mc:Ignorable="d"
        KeyDown="Window_KeyDown"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Selector" Height="230" Width="200">
    <StackPanel>
        <ListBox Name="box" Height="150" SelectionMode="Single" Background="WhiteSmoke"/>
        <Button Click="Set" Margin="5" FontSize="16" Content="OK"/>
    </StackPanel>
</Window>

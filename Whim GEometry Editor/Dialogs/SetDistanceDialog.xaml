<Window x:Class="Whim_GEometry_Editor.Dialogs.SetDistanceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whim_GEometry_Editor.Dialogs"
        Background="LightGray"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Set Distance" Height="150" Width="200">
    <StackPanel Margin="10">
        <RadioButton IsChecked="True" Name="Check_Set">Set</RadioButton>
        <RadioButton>Modify</RadioButton>
        <TextBox Name="InputValue" Margin="5"></TextBox>
        <Button Margin="10" Click="OK">  OK</Button>
    </StackPanel>
</Window>

<Window x:Class="Whim_GEometry_Editor.Dialogs.SequencesSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whim_GEometry_Editor.Dialogs"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="" Height="250" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Text="New name:" Width="70"/>
            <TextBox Name="NameInput" Width="250"/>
        </StackPanel>
        <ListBox Name="List_Sequences"  Grid.Row="1" SelectionMode="Multiple"/>
        <Button Content="OK" Grid.Row="2" Margin="10" Click="ok" />
    </Grid>
</Window>

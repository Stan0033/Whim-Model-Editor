<Window x:Class="Whim_GEometry_Editor.Dialogs.AttachInfoGeosets"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whim_GEometry_Editor.Dialogs"
        mc:Ignorable="d"
        Background="LightGray"
        KeyDown="Window_KeyDown"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Attach info for selected geosets" Height="240" Width="520">
    
        <StackPanel Orientation="Horizontal" Margin="10">
            <ListBox Name="List_Geosets" Width="100" Height="200" SelectionChanged="SelectedGeoset" Background="WhiteSmoke" SelectionMode="Single">

            </ListBox>
            <ListBox Name="List_Vertices" Width="400" Height="200" Background="WhiteSmoke" SelectionMode="Single">

            </ListBox>
        </StackPanel>
   
</Window>

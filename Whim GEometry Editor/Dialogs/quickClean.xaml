<Window x:Class="Whim_GEometry_Editor.Dialogs.quickClean"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whim_GEometry_Editor.Dialogs"
        mc:Ignorable="d" Background="LightGray"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen"
        Title="Quick Clean" Height="234" Width="219">
    <StackPanel Margin="10">
        <CheckBox Name="RemoveEmitter1sCheckBox">Remove all emitter 1s</CheckBox>
        <CheckBox Name="RemoveEmitter2sCheckBox">Remove all emitter 2s</CheckBox>
        <CheckBox Name="RemoveRibbonsCheckBox">Remove all ribbons</CheckBox>
        <CheckBox Name="RemoveLightsCheckBox">Remove all lights</CheckBox>
        <CheckBox Name="RemoveEventObjectsCheckBox">Remove all event objects</CheckBox>
        <CheckBox Name="check_att">Remove all attachments</CheckBox>
        <CheckBox Name="check_cols">Remove all collisoon shapes</CheckBox>
        <CheckBox Name="RootNodesCheckBox">Root all nodes</CheckBox>

        <Button Padding="10" Margin="10" Click="Do">Make Changes</Button>
    </StackPanel>
</Window>

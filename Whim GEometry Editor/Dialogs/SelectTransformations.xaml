<Window x:Class="Whim_GEometry_Editor.Dialogs.SelectTransformations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whim_GEometry_Editor.Dialogs"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="LightGray"
        KeyDown="Window_KeyDown"
        Title="Select Transformations" Height="200" Width="200">
    <StackPanel Margin="10">
        <CheckBox Margin="5" Name="Check_1">Translation</CheckBox>
        <CheckBox Margin="5" Name="Check_2">Rotation</CheckBox>
        <CheckBox Margin="5" Name="Check_3">Scaling</CheckBox>
        <Button Padding="10" Margin="10">OK</Button>
    </StackPanel>
</Window>
